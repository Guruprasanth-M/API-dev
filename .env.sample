# Database configuration
DB_SERVER=localhost
DB_USERNAME=root
DB_PASSWORD=your_password
DB_NAME=api_database
DB_CONNECT_TIMEOUT=5

# Migration configuration
MIGRATIONS_PATH=/path/to/your/project/src/Database/migrations/

# Bcrypt configuration
BCRYPT_COST=give_a_cost_value_here

# Token expiration times (in seconds)
SESSION_TOKEN_EXPIRE=give_session_token_expiry_time_here
REFRESH_TOKEN_EXPIRE=give_session_token_refresh_time_here

# Email (Gmail SMTP)
EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password
EMAIL_FROM_NAME=YourAPI

# Development mode (set to 'true' to skip email sending, logs to error_log instead)
DEVELOPMENT_MODE=false

# App URL for email links
APP_URL=https://yourdomain.com

# Verification token expiry (in seconds) - 1 day = 86400
VERIFICATION_TOKEN_EXPIRE=86400